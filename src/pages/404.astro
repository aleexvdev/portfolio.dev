---
import { ThemeDropdown } from "@/components/react/ThemeDropdown";
import ErrorPage from "../layouts/ErrorPage.astro";

const title = "Alexander Valverde | Ingeniero Informático";
const description =
  "Hola! Soy Alexander Valverde, un ingeniero informático especializado en desarrollo de software y programación web. Estoy comprometido con la creación de soluciones innovadoras y útiles para mejorar la experiencia de los usuarios. Hábil tanto en frontend como en backend.";
const canonicalPathname = "https://alexvdev.netlify.app";
const logo = "{av.}";
---

<ErrorPage
  title={title}
  description={description}
  canonicalPathname={canonicalPathname}
>
  <header class="w-full h-max fixed z-[99999] transition-colors duration-300">
    <div
      class="w-full h-full flex justify-center max-w-screen-lg mx-auto relative"
    >
      <div
        class="w-full h-max flex items-center justify-between px-6 py-1 md:py-3 rounded-3xl transition-all duration-300"
      >
        <div class="w-max h-max flex items-center">
          <a
            href="/#"
            class="text-2xl lg:text-3xl font-bold leading-6 gradient-text select-none transition-transform duration-200 flex flex-col items-center justify-center"
            style={{
              background:
                "linear-gradient(90deg, #9845e8 0%, #3377ff 55%, #dd5789 100%)",
              WebkitBackgroundClip: "text",
              WebkitTextFillColor: "transparent",
            }}
          >
            {logo}
          </a>
        </div>
        <div
            class="flex items-center gap-x-1"
          >
            <ThemeDropdown client:load />
          </div>
      </div>
    </div>
  </header>
  <main
    class="w-full min-h-screen max-w-screen-lg mx-auto relative flex flex-col items-center justify-center"
  >
    <img
      src="./thinking-face.png"
      alt="404: Página no encontrada"
      class="animate-float mb-5"
    />
    <h1 class="text-6xl font-bold mb-5 text-black/80 dark:text-white/80">Hmmm...</h1>
    <p class="text-2xl font-bold text-black/80 dark:text-white/80">
      Parece que aquí no hay nada.
    </p>
    <p class="text-2xl font-bold text-black/80 dark:text-white/80 mt-1">
      <span>Quizás deberías volver a</span>
      <a
        href="/#"
        class="inline-block text-blue-700 hover:text-blue-700 font-bold rounded transition duration-300 ease-in-out relative group"
      >
        casa
        <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-700 transition-all duration-300 ease-in-out group-hover:w-full" />
      </a>.
    </p>
  </main>
</ErrorPage>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  img {
    max-width: 100%;
    vertical-align: middle;
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
