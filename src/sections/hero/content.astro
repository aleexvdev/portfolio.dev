---
import CardHero from "@/components/CardHero.astro";
import { FileText, Github, Linkedin, Mail } from "lucide-astro";
---

<section class="w-full h-max px-6 py-20 flex items-center justify-center" aria-labelledby="hero-title">
  <div class="w-full h-full flex flex-col space-y-8 items-center">
    <CardHero title="Alexander Valverde" subtitle={"Desarrollador Full Stack"} />
    <div class="w-full h-full flex items-center space-x-4 mt-2">
      <div class="w-max h-full relative inline-flex overflow-hidden rounded-lg p-px">
        <div class="absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#51E4B8_0%,#21554E_50%,#51E4B8_100%)]"></div>
        <div class="w-full h-full flex items-center justify-center space-x-3 backdrop-blur-3xl px-3 py-2 bg-[#0C0A09] rounded-lg">
          <span class="block w-3 h-3 rounded-full bg-green-500 animate-custom-pulse"></span>
          <span class="ripple absolute left-0 w-3 h-3 rounded-full bg-green-500"></span>
          <span class="inline-flex text-base font-normal text-white text-nowrap">Disponible para trabajar</span>
        </div>
      </div>
      <div class="w-px h-10 bg-gray-400"></div>
      <div class="w-max flex items-center space-x-4">
        <a href="https://linkedin.com/in/aleexvdev" aria-label="LinkedIn" class="text-gray-400 hover:text-white transition">
          <Linkedin class="w-7 h-7" />
        </a>
        <a href="https://github.com/aleexvdev" aria-label="GitHub" class="text-gray-400 hover:text-white transition">
          <Github class="w-7 h-7" />
        </a>
        <a href="mailto:alex@example.com" aria-label="Email" class="text-gray-400 hover:text-white transition">
          <FileText class="w-7 h-7" />
        </a>
        <a href="mailto:alex@example.com" aria-label="Email" class="text-gray-400 hover:text-white transition">
          <Mail class="w-7 h-7" />
        </a>
      </div>
    </div>
  </div>
</section>


<style>
  @keyframes custom-pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.6;
    }
  }

  @keyframes ripple-effect {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .animate-custom-pulse {
    animation: custom-pulse 1.2s infinite;
  }

  .ripple {
    animation: ripple-effect 1.2s infinite;
    opacity: 0;
  }
</style>
